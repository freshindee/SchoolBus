            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_transparent_50"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_city"
                    android:textSize="12sp"
                    android:padding="15dp"
                    android:background="@color/txt_bg"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:hint="Select City"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_transparent_50"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date_picker_layout"
                android:gravity="center_vertical"
                android:weightSum="100"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="100"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingTop="25dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/lbl_date"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:background="@color/txt_bg"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hint_color"
                        android:textSize="12sp"
                        android:text="Date of Birth"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnDate"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:onClick="selectDate"
                        android:background="@drawable/calendar_icon" />


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_transparent_50"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gender"
                android:gravity="center_vertical"
                android:weightSum="100"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="25dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/lbl_gender"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:background="@color/txt_bg"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hint_color"
                        android:textSize="12sp"
                        android:text="Gender"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="Male"
                        android:id="@+id/btn_Male"
                        android:background="@drawable/transferent_boder_button"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:id="@+id/btn_FeMale"
                        android:text="Female"
                        android:background="@drawable/transferent_boder_button"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:orientation="horizontal">
            </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingBottom="100dp"
            android:weightSum="100"
            android:orientation="horizontal"
            >


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:layout_width="0dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="11sp"
                    android:layout_height="wrap_content"
                    android:text="By continuing, I confirm that"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="I have read and agree to the"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_termscondition"
                        android:fontFamily="sans-serif-normal"
                        android:textSize="11sp"
                        android:textColor="@color/hint_color"
                        android:text="Terms and Conditions"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text=" and "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_privacypolicy"
                        android:fontFamily="sans-serif-normal"
                        android:textSize="11sp"
                        android:textColor="@color/hint_color"
                        android:text="Privacy Policy"/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                    android:id="@+id/lay_next_view"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:layout_width="0dp">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/btn_LetsGo"
                    android:onClick="Login"
                    android:background="@drawable/newxarrow"/>
            </LinearLayout>


</LinearLayout>
